---
import Language from "./Language.astro";
const { Lang } = Astro.props;
---

<header id="header" class="fixed-top">
  <div class="container d-flex align-items-center justify-content-lg-between">
    <h1 class=""><a href="">UniKode<span>.</span></a></h1>
    <!-- Uncomment below if you prefer to use an image logo -->
    <!-- <a href="index.html" class="logo me-auto me-lg-0"><img src="assets/img/logo.png" alt="" class="img-fluid"></a> -->

    <nav id="navbar" class="navbar order-last order-lg-0">
      <ul>
        <li>
          <a class="nav-link scrollto active" href="#hero"
            >{Lang == "en" ? "Home" : "Accueil"}</a
          >
        </li>
        <li>
          <a class="nav-link scrollto" href="#about"
            >{Lang == "en" ? "About" : "Qui sommes-nous"}</a
          >
        </li>
        <li>
          <a class="nav-link scrollto" href="#services"
            >{Lang == "en" ? "Services" : "Services"}</a
          >
        </li>
        <li>
          <a class="nav-link scrollto" href="#portfolio"
            >{Lang == "en" ? "Portfolio" : "portefeuille"}</a
          >
        </li>
        <li>
          <a class="nav-link scrollto" href="#team"
            >{Lang == "en" ? "Team" : "Equipe"}</a
          >
        </li>
        <li>
          <a class="nav-link scrollto" href="#contact"
            >{Lang == "en" ? "Contact" : "Contact"}</a
          >
        </li>
      </ul>
      <i class="bi bi-list mobile-nav-toggle"></i>
    </nav>

    <Language
      currentLanguage={Lang}
      currentLanguageFlag={"https://cdn.britannica.com/79/4479-050-6EF87027/flag-Stars-and-Stripes-May-1-1795.jpg"}
    />
  </div>
</header>
